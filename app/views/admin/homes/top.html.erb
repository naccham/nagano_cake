<div class="container">

  <div class="row">
    <h2 class="m-2">注文履歴一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders. each do |order|  %>
        <tr>
          <td>
            <%= link_to  admin_order_path(order.id) do %>
              <%= order.created_at %>
            <% end %>
          </td>
          <td><%= order.name %></td>
          <% order.order_details. each do |order_detail|  %>
            <% order_detail.amount %>
            <% @total_amount += order_detail.amount %>
          <% end %>
          <td><%= @total_amount %></td>
          <td>ステータス表示される</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
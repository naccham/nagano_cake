<h1>商品一覧</h1>

<%= link_to "商品新規登録", new_admin_item_path %>


<% @items.each do |item| %>
  <div>
    <%= attachment_image_tag item, :image %>
    <p>商品ID：<%= item.id %></p>
    <%= link_to admin_item_path(item.id) do %>
      <p>商品名：<%= item.name %></p>
    <% end %>
    <p>税抜価格：<%= item.price %></p>
  </div>
<% end %>
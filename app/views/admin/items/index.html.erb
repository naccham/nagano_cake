<div class="container">
    <h1 class="mt-3">商品一覧</h1>
    <%= link_to "商品新規登録", new_admin_item_path, class: 'btn btn-primary m-2' %>
  <div class="row">
    <div class="col-md-8">
     <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
          </td>
          <td><%= item.price %>円</td>
          <td>ジャンル</td>
          <td>ステータス</td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
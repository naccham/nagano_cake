会員の注文詳細画面
<div class="container">
  <div class="row">
    <div class="customer-info">
      <div class="form-group">
        購入者
        <%= @order.name %>
      </div>
      <div class="form-group">
        注文日
        <%= @order.created_at %>
      </div>
      <div class="form-group">
        配送先
        〒<%= @order.postal_code %><%= @order.address %><%= @order.name %>
      </div>
      <div class="form-group">
        支払方法
        <%= @order.payment_method %>
      </div>
      <div class="form-group">
        注文ステータス
      </div>
    </div>
    
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details. each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td></td>
          <td>製作ステータス</td>
          <td>更新</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
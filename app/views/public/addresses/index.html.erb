  <div class="contents">
    <h1 class="public-contents-title">配送先登録/一覧</h1>
      <%= form_with model: @address, url: addresses_path, local:true do |f| %>
        <h4>郵便番号</h4>
        <%= f.text_field :postal_code %>
        <h4>住所</h4>
        <%= f.text_field :address %>
        <h4>宛名</h4>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
      <% end %>

    <nav class="public-address-column">
      <ul>
        <li>郵便番号</li>
        <li>住所</li>
        <li>宛名</li>
      </ul>
    </nav>
    <div class="public-address-list">
      <% @addresses.each do |address| %>
        <ul>
          <li><%= address.customer.postal_code %></li>
          <li><%= address.customer.address %></li>
          <li><%= address.name %>円</li>
        </ul>
      <% end %>
    </div>
  </div>
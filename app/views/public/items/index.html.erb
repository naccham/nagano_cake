<div class="contents">
    <h2 class="contents-title">商品一覧</h1>
    <div class="new-item-list">
      <% @items.each do |item| %>
        <div class="new-item">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, size: "200x200" %>
          <% end %>
          <p><%= item.name %></p>
          <p><%= item.price %>円</p>
        </div>
      <% end %>
    </div>
</div>
<h1>注文履歴詳細画面</h1>

<div class="container">
  <div class="row">
    <table class="table">
      <tr><th>注文日</th><td><%= @order.created_at %></td></tr>
      <tr><th>配送先</th><td><%= @order.address %></td></tr>
      <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
      <tr><th>ステータス</th><td></td></tr>
    </table>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details. each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.with_tax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.subtotal %></td>
          <% @total_price +=  order_detail.subtotal %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <table class="table">
      <tr><th>商品合計</th><td><%= @total_price %></td></tr>
      <tr><th>配送料</th><td><%= @order.shopping_cost %></td></tr>
      <tr><th>ご請求額</th><td><%= @order.total_payment %></td></tr>
    </table>
  </div>
</div>
